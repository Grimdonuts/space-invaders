{
    "version": "2.0.0",
    "tasks": [
		{
			"label": "build program",
			"type": "shell",
			"command": "g++",
			"args": [
				"-g",
				"main.cpp", "Game.cpp", "TextureManager.cpp", "Player.cpp", "Wall.cpp", "Invaders.cpp", "Timer.cpp", "Bullets.cpp", "Barrier.cpp",
				"-o",
				"${workspaceFolder}\\build\\Game",
				"-L",
				"${workspaceFolder}\\build\\",
				"-lSDL2",
				"-lSDL2_Image",
				"--verbose",
				"-mwindows",
				"-static-libgcc",
				"-static-libstdc++"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}